{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run TypeScript via local ts-node/esm",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--loader",
        "./node_modules/ts-node/esm.mjs"
      ],
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
